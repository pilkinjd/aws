<%- model_class = Round -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @round.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @round.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:arrows) %>:</strong></dt>
  <dd><%= @round.arrows %></dd>
  <dt><strong><%= model_class.human_attribute_name(:scoring) %>:</strong></dt>
  <dd><%= @round.scoring %></dd>
  <dt><strong><%= model_class.human_attribute_name(:indoor_outdoor) %>:</strong></dt>
  <dd><%= @round.indoor_outdoor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:order_id) %>:</strong></dt>
  <dd><%= @round.order_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:on_card) %>:</strong></dt>
  <dd><%= yes_no @round.on_card %></dd>
  <dt><strong><%= model_class.human_attribute_name(:official) %>:</strong></dt>
  <dd><%= yes_no @round.official %></dd>
  <dt><strong><%= model_class.human_attribute_name(:group_letter) %>:</strong></dt>
  <dd><%= @round.group_letter %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              rounds_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_round_path(@round), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              round_path(@round),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
